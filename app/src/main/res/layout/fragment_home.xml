            android:hint="Tu pin"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>