<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Encabezado -->
    <TextView
        android:id="@+id/tvTituloEntrenamiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTRENAMIENTO"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botones Principiante, Intermedio, Avanzado -->
    <RadioGroup
        android:id="@+id/rgNivelEntrenamiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloEntrenamiento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/rbPrincipiante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Principiante" />

        <RadioButton
            android:id="@+id/rbIntermedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intermedio" />

        <RadioButton
            android:id="@+id/rbAvanzado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avanzado" />
    </RadioGroup>

    <!-- Scroll general -->
    <ScrollView
        android:id="@+id/scrollViewEntrenamiento"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/rgNivelEntrenamiento"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contenedorEntrenamientos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sección Popular Training -->
            <TextView
                android:id="@+id/tvPopularTraining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular Training"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"/>

            <!-- Entrenamiento 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/entrenamiento_brazos" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estiramiento Total De Brazos"
                        android:textSize="16sp"
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Principiante · 20 min"
                        android:paddingLeft="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="#888888"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Entrenamiento 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fuerza_equilibrio" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rutina de fuerza y equilibrio con brazos"
                        android:textSize="16sp"
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Principiante · 40 min"
                        android:paddingLeft="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="#888888"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Entrenamiento 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sesion_tenis" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sesión de tenis"
                        android:textSize="16sp"
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Principiante · 20 min"
                        android:paddingLeft="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="#888888"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sección Solo para ti -->
            <TextView
                android:id="@+id/tvSoloParaTi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solo para ti"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="24dp"
                android:paddingBottom="8dp"/>

            <!-- Mini entrenamientos -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Mini Cards -->
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="160dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/solo_para_ti1"
                        android:scaleType="centerCrop"
                        android:background="@drawable/rounded_corners" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="160dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/solo_para_ti2"
                        android:scaleType="centerCrop"
                        android:background="@drawable/rounded_corners" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="160dp"
                        android:src="@drawable/solo_para_ti3"
                        android:scaleType="centerCrop"
                        android:background="@drawable/rounded_corners" />
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
