<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nivel de dificultad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnPrincipiante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Principiante"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/azul_entrenamiento" />

            <Button
                android:id="@+id/btnIntermedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intermedio"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/azul_entrenamiento" />

            <Button
                android:id="@+id/btnAvanzado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avanzado"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/azul_entrenamiento" />
        </LinearLayout>

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular Training"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="12dp" />

        <!-- Ejercicio 1 -->
        <LinearLayout
            android:id="@+id/cardEntrenamiento1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/darker_gray"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ejerciciospopu_estiramientodebrazos"
                android:background="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estiramiento Total De Brazos"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/nivel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Principiante · 30 min"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Ejercicio 2 -->
        <LinearLayout
            android:id="@+id/cardEntrenamiento2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/darker_gray"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ejerciciospopu_sesiondefuerzaguiada"
                android:background="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rutina de fuerza y equilibrio con brazos"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/nivel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intermedio · 50 min"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Ejercicio 3 -->
        <LinearLayout
            android:id="@+id/cardEntrenamiento3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/darker_gray"
            android:padding="12dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/populartraining_sesiondetenis"
                android:background="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sesión de tenis"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/nivel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avanzado · 20 min"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Solo para ti -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solo para ti"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="16dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Tarjeta 1 -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/solopara_ti_libre"
                        android:background="@android:color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Libre"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 min"
                        android:textSize="12sp"
                        android:drawableLeft="@drawable/ic_reloj"
                        android:drawablePadding="4dp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Tarjeta 2 -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/soloparatia_energym"
                        android:background="@android:color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Energym"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 min"
                        android:textSize="12sp"
                        android:drawableLeft="@drawable/ic_reloj"
                        android:drawablePadding="4dp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Tarjeta 3 -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/soloparati_libre2"
                        android:background="@android:color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Libre"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 min"
                        android:textSize="12sp"
                        android:drawableLeft="@drawable/ic_reloj"
                        android:drawablePadding="4dp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>
