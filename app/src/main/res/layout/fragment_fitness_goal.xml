<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_goal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="top"
    android:background="#FFFFFF">

    <!-- Encabezado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paso 7 de 7"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saltar"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Pregunta -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿CUÁL ES TU OBJETIVO?"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp" />

    <!-- Opciones con íconos -->
    <Button
        android:id="@+id/btn_perder_peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Pérdida de peso"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:background="@null"
        android:drawableLeft="@null"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_ganar_musculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Ganar músculo"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:background="@null"
        android:drawableLeft="@null"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_mejorar_condicion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Mejorar condición física"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000000"
        android:drawableLeft="@null" />

    <!-- Botón Finalizar -->
    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PASOS FINALIZADOS"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2196F3"
        android:layout_marginTop="32dp"/>
</LinearLayout>
