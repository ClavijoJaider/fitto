<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenido desplazable, dejando margen para la nav bar -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        android:padding="24dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi Perfil"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <!-- Información básica -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvAgeInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edad: -- años"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvWeightInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Peso corporal: -- kg"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvHeightInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estatura: -- cm"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvLevelInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nivel actividad: --"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvObjectiveInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Objetivo fitness: --"
                        android:textSize="16sp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Metabolismo -->
            <TextView
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metabolismo"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvBmr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BMR: -- kcal"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(Energía en reposo)"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvTdee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TDEE: -- kcal"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(Mantenimiento actividad)"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Composición Corporal -->
            <TextView
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Composición Corporal"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvBmi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="IMC: --"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvBmiCat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(Clasificación: --)"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvBodyFat"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="% Grasa: -- %"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(Fórmula Deurenberg)"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvLeanMass"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Masa Magra: -- kg"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(Peso sin grasa)"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvWater"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Agua: -- L"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(≈60% peso)"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Macronutrientes -->
            <TextView
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Macronutrientes"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvProteinReq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Proteínas: -- g/día"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(2 g/kg peso)"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvFatReq"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grasas: -- g/día"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(25% calorías)"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvCarbsReq"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Carbohidratos: -- g/día"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(Resto calorías)"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Extras Fitness -->
            <TextView
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cálculos Avanzados"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvIdealWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Peso Ideal: -- kg"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="( fórmula Devine )"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvBsa"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BSA: -- m²"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(Mosteller)"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvHrMax"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="HR Máx: -- lpm"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(220 – edad)"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvHrZone"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Zonas: --"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(50–60%,60–70%,70–80%,80–90%)"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@null"
        app:itemTextColor="@null"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
