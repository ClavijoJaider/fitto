<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Encabezado -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dieta Saludable"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"/>

    <!-- Selector de fecha -->
    <LinearLayout
        android:id="@+id/selectorFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo">

        <Button
            android:id="@+id/btnDiaAnterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;"/>

        <TextView
            android:id="@+id/tvFechaActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Febrero 2022"
            android:padding="8dp"/>

        <Button
            android:id="@+id/btnDiaSiguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"/>
    </LinearLayout>

    <!-- Filtros: Desayuno, Almuerzo, Cena -->
    <RadioGroup
        android:id="@+id/rgComidas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/selectorFecha">

        <RadioButton
            android:id="@+id/rbDesayuno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desayuno"/>

        <RadioButton
            android:id="@+id/rbAlmuerzo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Almuerzo"/>

        <RadioButton
            android:id="@+id/rbCena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cena"/>
    </RadioGroup>

    <!-- Contenedor de comidas -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/rgComidas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/contenedorComidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Aquí agregamos directamente el diseño de un item de comida -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivComida"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@null" />

                    <TextView
                        android:id="@+id/tvTituloComida"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frijoles verdes, tomates, huevos"
                        android:textSize="16sp"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/tvInfoComida"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="135 kcal · 30 min"
                        android:padding="8dp"
                        android:textColor="#888888"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
